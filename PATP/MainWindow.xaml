<Window x:Class="PATP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PATP"
        mc:Ignorable="d"
        Title="Отдел кадров" Height="450" Width="815" MinWidth="815" MinHeight="450">
    <Grid>
        <Button x:Name="btn0" Content="Обновить" Margin="10,11,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Width="196" Click="Button_Click"/>
        <Button x:Name="btn1" Content="Добавить работника" Margin="296,11,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Width="224" Click="Button_Click_1"/>
        <Button x:Name="btn2" Content="Удалить работника" Margin="596,11,0,0" Height="32" VerticalAlignment="Top" HorizontalAlignment="Left" Width="194" Click="Button_Click_2" IsEnabled="False"/>
        <DataGrid x:Name="grid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,58,10,10" SelectionChanged="grid_SelectionChanged" CanUserResizeRows="False" CanUserDeleteRows="False" CanUserAddRows="False"/>

    </Grid>
</Window>
